<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Disable shadow copying to prevent directory issues -->
    <DisableAppDomain>true</DisableAppDomain>
    <!-- Use the build output directory -->
    <TargetPlatform>x64</TargetPlatform>
    <!-- Disable parallel execution if needed -->
    <MaxCpuCount>0</MaxCpuCount>
  </RunConfiguration>
  
  <LiveUnitTesting>
    <!-- Force Live Unit Testing to use the project directory -->
    <Enabled>true</Enabled>
  </LiveUnitTesting>
</RunSettings>
