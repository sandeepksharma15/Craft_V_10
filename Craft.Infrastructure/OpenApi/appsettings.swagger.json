{
  "SwaggerOptions": {
    // Enable or disable Swagger/OpenAPI documentation
    "Enable": true,

    // Basic Information
    "Title": "My API",
    "Version": "v1",
    "Description": "Comprehensive API documentation with detailed examples and usage instructions",

    // Contact Information (Optional)
    "ContactName": "API Support Team",
    "ContactEmail": "support@example.com",
    "ContactUrl": "https://example.com/support",

    // License Information (Optional)
    "LicenseName": "MIT",
    "LicenseUrl": "https://opensource.org/licenses/MIT",

    // Terms of Service (Optional)
    "TermsOfService": "https://example.com/terms",

    // Swagger UI Configuration
    "RoutePrefix": "swagger",
    "EnableInProduction": false,

    // XML Documentation
    "IncludeXmlComments": true,
    "XmlDocumentationFiles": [
      // "MyApi.xml",
      // "MyApi.Models.xml"
    ],

    // Server URLs for different environments
    "Servers": [
      {
        "Url": "https://api.example.com",
        "Description": "Production Server"
      },
      {
        "Url": "https://api-staging.example.com",
        "Description": "Staging Server"
      },
      {
        "Url": "http://localhost:5000",
        "Description": "Local Development"
      }
    ],

    // Security Configuration
    "Security": {
      // JWT Bearer Authentication
      "EnableJwtBearer": true,
      "JwtBearerSchemeName": "Bearer",
      "JwtBearerDescription": "Enter JWT Bearer token (without 'Bearer' prefix)",

      // API Key Authentication
      "EnableApiKey": false,
      "ApiKeySchemeName": "ApiKey",
      "ApiKeyHeaderName": "X-API-Key",
      "ApiKeyDescription": "Enter your API Key from the developer portal",

      // OAuth2 Authentication
      "EnableOAuth2": false,
      "OAuth2": {
        "AuthorizationUrl": "https://auth.example.com/oauth/authorize",
        "TokenUrl": "https://auth.example.com/oauth/token",
        "Scopes": {
          "api.read": "Read access to API",
          "api.write": "Write access to API",
          "api.admin": "Administrative access to API"
        },
        "ClientId": "swagger-ui",
        "ClientSecret": "your-client-secret" // Consider using ENC: prefix for encryption
      }
    },

    // UI Customization
    "UI": {
      "DocumentTitle": "My API Documentation",
      "HeadContent": null, // Custom HTML to inject in <head>

      // Behavior
      "EnableDeepLinking": true,
      "DisplayOperationId": false,
      "DisplayRequestDuration": true,
      "DefaultModelsExpandDepth": 1, // -1 to 10
      "EnableFilter": true,
      "EnableTryItOutByDefault": false,
      "PersistAuthorization": true,

      // Display Options
      "DocExpansion": "none", // "none", "list", or "full"
      "DefaultModelRendering": "example", // "example" or "model"

      // Custom Styling
      "CustomCssUrl": null, // e.g., "https://cdn.example.com/swagger-dark.css"
      "InlineCustomCss": null, // Inline CSS string
      "CustomJavaScriptUrl": null // e.g., "https://cdn.example.com/custom.js"
    },

    // Documentation Enhancement
    "Documentation": {
      // Filtering
      "IgnoreObsoleteActions": true,
      "IgnoreObsoleteProperties": true,

      // Schema Options
      "ShowEnumDescriptions": true,
      "ShowDefaultValues": true,
      "UseAllOfForRequired": false,
      "UseOneOfForPolymorphism": true,
      "UseInlineDefinitionsForEnums": false,

      // Tag Descriptions
      "TagDescriptions": {
        "Users": "User management, authentication, and profile endpoints",
        "Products": "Product catalog, inventory, and pricing management",
        "Orders": "Order processing, fulfillment, and tracking",
        "Reports": "Analytics, reporting, and data export endpoints"
      }
    }
  }
}
