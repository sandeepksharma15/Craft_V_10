@using Craft.Utilities.Helpers

@namespace Craft.UiBuilders.Generic

@inherits CraftComponent

<Show When="Visible">
	<CraftDiv Class="d-flex justify-center">
		<MudProgressCircular Color="Color" Indeterminate="true" />
	</CraftDiv>
</Show>

@code {
	[Parameter] public Color Color { get; set; } = GetRandomColor();

	private static Color GetRandomColor()
	{
		// Get all possible Color enum values
		Color[] colors = EnumExtensions.GetValues<Color>();

		// Return a random color
		return colors[RandomHelper.GetRandom(colors.Length)];
	}
}
