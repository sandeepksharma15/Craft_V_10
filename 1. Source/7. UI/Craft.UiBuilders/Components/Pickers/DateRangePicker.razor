@namespace Craft.UiBuilders.Components

@inherits CraftComponent

@using MudBlazor

<MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Wrap="Wrap.Wrap">

    <MudDatePicker Label="@StartLabel" 
                   Date="@StartDate"
                   DateChanged="@OnStartDateChangedAsync"
                   AutoClose="true"
                   IsDateDisabledFunc="@IsStartDateDisabled"
                   Variant="@Variant"
                   PickerVariant="@PickerVariant"
                   Placeholder="Select start date" />

    <MudDatePicker Label="@EndLabel"
                   Date="@EndDate"
                   DateChanged="@OnEndDateChangedAsync"
                   AutoClose="true"
                   IsDateDisabledFunc="@IsEndDateDisabled"
                   Variant="@Variant"
                   PickerVariant="@PickerVariant"
                   Placeholder="Select end date" />

</MudStack>
