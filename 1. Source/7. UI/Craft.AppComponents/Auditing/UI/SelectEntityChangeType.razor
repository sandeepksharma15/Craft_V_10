@namespace Craft.AppComponents.Auditing
@using Craft.Auditing
@using MudBlazor

<MudSelect T="EntityChangeType?"
           Value="@Value"
           ValueChanged="@ValueChanged"
           Label="@Label"
           Placeholder="@Placeholder"
           Variant="@Variant"
           Required="@Required"
           ReadOnly="@ReadOnly"
           Disabled="@Disabled"
           Clearable="true"
           AnchorOrigin="Origin.BottomLeft">
    @foreach (var (changeType, description) in _descriptions)
    {
        <MudSelectItem T="EntityChangeType?" Value="@changeType">@description</MudSelectItem>
    }
</MudSelect>
