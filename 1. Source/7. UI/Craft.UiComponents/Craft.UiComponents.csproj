<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RootNamespace>Craft.UiComponents</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="10.0.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\1. Core\Craft.Extensions\Craft.Extensions.csproj" />
		<ProjectReference Include="..\..\1. Core\Craft.Utilities\Craft.Utilities.csproj" />
	</ItemGroup>

	<Target Name="NpmBuild" BeforeTargets="Build">
		<Exec Command="npm install" />
		<Exec Command="npm run build" />
	</Target>

</Project>
