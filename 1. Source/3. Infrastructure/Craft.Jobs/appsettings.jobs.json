{
  "JobOptions": {
    // ===== DATABASE CONFIGURATION =====
    // PostgreSQL connection string (REQUIRED)
    // Format: Host=server;Port=5432;Database=dbname;Username=user;Password=pass
    "ConnectionString": "Host=localhost;Port=5432;Database=CraftJobs;Username=postgres;Password=your_password",
    
    // ===== DASHBOARD SETTINGS =====
    // Enable Hangfire dashboard (web UI for monitoring jobs)
    "EnableDashboard": true,
    
    // URL path for dashboard (default: /hangfire)
    // Access at: https://your-app.com/hangfire
    "DashboardPath": "/hangfire",
    
    // ===== WORKER CONFIGURATION =====
    // Maximum number of concurrent jobs (1-100)
    // Increase for high-throughput scenarios
    "WorkerCount": 20,
    
    // ===== RETRY POLICY =====
    // Maximum retry attempts for failed jobs (0-10)
    "MaxRetryAttempts": 3,
    
    // Enable automatic retry for failed jobs
    "EnableAutomaticRetry": true,
    
    // ===== JOB RETENTION =====
    // Days to keep job history (1-365)
    // Jobs older than this are automatically deleted
    "JobExpirationDays": 7,
    
    // ===== MULTI-TENANCY =====
    // Enable tenant-aware job execution
    // Jobs automatically capture and restore tenant context
    "EnableMultiTenancy": false,
    
    // ===== DATABASE SCHEMA =====
    // PostgreSQL schema name for Hangfire tables
    // Change if you want separate schema (e.g., "background_jobs")
    "SchemaName": "hangfire",
    
    // ===== PERFORMANCE =====
    // Job polling interval in seconds (1-60)
    // Lower = more responsive but higher DB load
    "PollingIntervalSeconds": 15,
    
    // ===== LOGGING =====
    // Enable verbose logging (for debugging)
    "EnableDetailedLogging": false
  },

